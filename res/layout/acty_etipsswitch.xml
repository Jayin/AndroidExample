<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/black" >
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="240dp" android:background="@drawable/item_bg" >

    <ViewFlipper
        android:id="@+id/viewflippler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"   android:flipInterval="9000" android:autoStart="true">
 
    </ViewFlipper>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/acty_etips_main_course_time"
            style="@style/Better_TextView_ETipsMain"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="2013-9-12 星期四"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/acty_etips_main_course_weekNo"
            style="@style/Better_TextView_ETipsMain"
            android:layout_above="@+id/acty_etips_main_course_time"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="第1周"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textView1"
            style="@style/Base_TextView_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/acty_etips_main_course_weekNo"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="55dp"
            android:text="校园资讯 触手可及"
            android:textColor="@color/white"
            android:textSize="29sp" />
    </RelativeLayout>

</FrameLayout>

<Button
    android:id="@+id/button1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="19dp"
    android:text="pre" />

<Button
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="73dp"
    android:text="next" />

</RelativeLayout>